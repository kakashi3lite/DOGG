# DOGG API Environment Configuration

# Database
MONGODB_URI=mongodb://localhost:27017/dogg
MONGODB_URI_TEST=mongodb://localhost:27017/dogg-test

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
BCRYPT_ROUNDS=12

# Server Configuration
PORT=3001
NODE_ENV=development
WEB_APP_URL=http://localhost:3000

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/dogg-api.log
SECURITY_LOG_PATH=./logs/security.log

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn-here
APM_SERVICE_NAME=dogg-api

# External Services
EMAIL_SERVICE_API_KEY=your-email-service-key
FILE_UPLOAD_SERVICE_URL=your-file-upload-service

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Development Only (DO NOT use in production)
DEV_SKIP_AUTH=false
DEV_MOCK_EXTERNAL_SERVICES=false

# Security Headers Configuration
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce
HSTS_MAX_AGE=31536000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Redis (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# API Keys for External Services
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Webhook Secrets
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Testing
TEST_JWT_SECRET=test-secret-key-for-testing-only-do-not-use-in-production
TEST_DATABASE_NAME=dogg-test

# Security Scanning
SNYK_TOKEN=your-snyk-token
SEMGREP_APP_TOKEN=your-semgrep-token

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_STORAGE_URL=your-backup-storage-url
